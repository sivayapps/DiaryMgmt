<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.boshanam.diarymgmt.MainMenuActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center_vertical|center"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingTop="5dp"
        android:theme="@style/AppTheme"
        android:visibility="visible">

        <Button
            android:id="@+id/farmerRegister"
            style="@style/mainMenuButtonStyle"
            android:text="@string/farmer_register" />

        <Button
            android:id="@+id/milkCollect"
            style="@style/mainMenuButtonStyle"
            android:text="@string/collect_milk" />

        <Button
            android:id="@+id/fatEntry"
            style="@style/mainMenuButtonStyle"
            android:text="@string/fat_entry"/>

        <Button
            android:id="@+id/rateEntry"
            style="@style/mainMenuButtonStyle"
            android:text="@string/rate_entry" />

        <Button
            android:id="@+id/paymentReport"
            style="@style/mainMenuButtonStyle"
            android:text="@string/payment_reports" />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>
