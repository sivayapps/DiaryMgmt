<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.boshanam.diarymgmt.RateEntryActivity"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="3dp"
        android:paddingTop="5dp"
        android:theme="@style/AppTheme"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView"
            style="@style/formFieldsVerticalFlowStyle"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="bottom"
            android:text="@string/milk_prompt"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/rate_milk_type"
            style="@style/formFieldsVerticalFlowStyle"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:entries="@array/milk_type"
            android:gravity="top" />

        <CheckBox
            style="@style/formFieldsVerticalFlowStyle"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Predict Next Fat Vlue"
            android:textSize="15sp" />

        <CheckBox
            style="@style/formFieldsVerticalFlowStyle"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Redict Next Rate Value"
            android:textSize="15sp" />

        <LinearLayout
            style="@style/formFieldsVerticalFlowStyle"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/fat"
                style="@style/formFieldsHorizontalFlowStyle"
                android:hint="@string/fat"
                android:inputType="number|numberDecimal" />

            <EditText
                android:id="@+id/rate"
                style="@style/formFieldsHorizontalFlowStyle"
                android:layout_marginLeft="0dp"
                android:hint="@string/rate"
                android:inputType="number|numberDecimal" />

            <Button
                android:id="@+id/next"
                style="@style/formButtonStyle"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|center_vertical|center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="0dp"
                android:layout_weight="1"
                android:text="@string/save" />
        </LinearLayout>

        <Button
            android:id="@+id/finish"
            style="@style/formButtonStyle"
            android:text="@string/finish" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
